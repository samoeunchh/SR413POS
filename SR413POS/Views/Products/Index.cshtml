
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@Html.AntiForgeryToken()
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="t1">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Barcode
            </th>
            <th>
                OnHand
            </th>
            <th>
                Cost
            </th>
            <th>
                Category
            </th>
            <th>
                Unit
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section Scripts{ 
<script>
    $(document).ready(function () {
        $("#t1").DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "ajax": {
                "url": "Products/GetData",
                "type": "POST",
                "dataType": "json"
            },
            "columns": [
                { "data": "productName", "name": "productName" },
                { "data": "barcode", "name": "barcode" },
                { "data": "onHand", "name": "onHand" },
                { "data": "cost", "name": "cost" },
                { "data": "categoryId", "name": "categoryId" },
                { "data": "unitId", "name": "unitId" },
                {
                    "render": function (data, type, full, meta) {
                        console.log(full);
                        return '<a class="btn btn-info" href="Products/Edit/' + full.productId + '"><span class="fa fa-edit"></span></a>';
                    }, orderable: false
                },
                {
                    data: null, render: function (data, type, row) {
                        return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.productId + "');><span class='fa fa-trash'></a>";
                    }, orderable: false
                }
            ]
        });
    });
    function DeleteData(id) {
        if (confirm("Do you want to delete this record?")) {
            var token = $("input[name=__RequestVerificationToken]").val();
            $.ajax({
                method: "POST",
                url: "Products/Delete/" + id,
                data: { __RequestVerificationToken: token, id:id },
                dataType: "Html",
                success: function (response) {
                    var data = $("#t1").DataTable();
                    data.draw();
                }, error: function (error) {
                    console.log(error);
                }
            });
        }
    }
</script>

}
